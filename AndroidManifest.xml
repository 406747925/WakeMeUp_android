<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.jlu.ge.getup"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />
	<supports-screens android:largeScreens="true"
       android:normalScreens="true" android:anyDensity="true"
       android:smallScreens="true"></supports-screens>
    <application
        android:allowBackup="true"
        android:persistent="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:process="gestudio.wakeup.main"
         >
        <activity
            android:name="cn.jlu.ge.getup.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.main">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="cn.jlu.ge.getup.WakeUpActivity"
            android:process="gestudio.wakeup.main">
        </activity>
        <activity
            android:name="cn.jlu.ge.getup.ChangeAlarmActivity"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.main">
        </activity>
        <activity 
            android:name="cn.jlu.ge.getup.SetAlarmActivity"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.main">
        </activity>
        <activity 
            android:name="cn.jlu.ge.getup.SignInActivity"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.main">
        </activity>
        <activity 
            android:name="cn.jlu.ge.getup.WeatherCitiesSettingActivity"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.main">
        </activity>
        <activity 
            android:name="cn.jlu.ge.getup.WeatherMainActivity"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.main">
        </activity>
        <activity 
            android:name="cn.jlu.ge.getup.WebPageActivity"
            android:launchMode="singleTask"
            android:process="gestudio.wakeup.webpage">
        </activity>
		<service 
		    android:name="cn.jlu.ge.getup.tools.ForegroundService"
		    android:process="gestudio.wakeup.server">
			<!-- <intent-filter android:priority="1000"></intent-filter> -->
		</service>
        <receiver android:name="cn.jlu.ge.getup.tools.AlarmReceiver" android:process=":remote" />
        <receiver android:name="cn.jlu.ge.getup.tools.BootBroadcastReceiver" android:process=":remote" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
	<uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
	
	<supports-screens
		android:largeScreens="true"
		android:normalScreens="true"
		android:anyDensity = "true"/>
</manifest>

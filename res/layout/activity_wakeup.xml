<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_height="@dimen/activity_wakeup_mainblock_height"
        android:layout_width="match_parent"
        android:background="#EC1717"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_wakeup_mid_margin"
                android:layout_marginLeft="@dimen/activity_wakeup_mid_margin"
                android:textSize="@dimen/activity_wakeup_min_text_size"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/alarmTime"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_wakeup_min_margin"
                android:textSize="@dimen/activity_wakeup_max_text_size"
                android:textColor="#FFFFFF"
                />
	        <TextView
	            android:id="@+id/notify"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_wakeup_mid_margin"
			    android:textSize="@dimen/activity_wakeup_min_text_size"
			    android:textColor="#FFFFFF"
	            />
        </LinearLayout>
        
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
	        <TextView 
	            android:id="@+id/cityName"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:gravity="center"
			    android:layout_marginTop="@dimen/activity_wakeup_mid_margin"
			    android:paddingLeft="@dimen/activity_wakeup_min_margin"
			    android:textSize="@dimen/activity_wakeup_min_text_size"
	            android:textColor="#FFFFFF"
	            />
	        <ImageView 
	            android:id="@+id/weatherIcon"
	            android:layout_width="@dimen/activity_main_weather_icon_size"
	            android:layout_height="@dimen/activity_main_weather_icon_size"
	            android:contentDescription="weatherIcon"
	            />
	        <TextView 
	            android:id="@+id/weather"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:paddingLeft="@dimen/activity_wakeup_min_margin"
			    android:paddingRight="@dimen/activity_wakeup_min_margin"
			    android:textSize="@dimen/activity_wakeup_min_text_size"
			    android:textColor="#FFFFFF"
	            />
        </LinearLayout>
        
    </LinearLayout>

	<LinearLayout 
	    android:id="@+id/WakeUpTextLayout"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#E5E5E5"
	    android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
	    >

        <TextView
            android:id="@+id/welcome"
		    android:textSize="@dimen/activity_wakeup_mid_text_size"
            android:layout_marginTop="@dimen/activity_wakeup_mid_margin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_wakeup_mid_margin"
            android:paddingRight="@dimen/activity_wakeup_mid_margin"
            android:gravity="center"
            android:text="Someting."
            android:textColor="#111111"
            />
        
        <TextView
            android:id="@+id/shakeRemained"
		    android:textSize="@dimen/activity_wakeup_mid_text_size"
            android:layout_marginTop="@dimen/activity_wakeup_mid_margin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_wakeup_min_margin"
            android:text="Someting."
            android:textColor="#111111"
            />

	</LinearLayout>

	<LinearLayout 
	    android:id="@+id/SignInLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/activity_wakeup_signinblock_height"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:layout_marginTop="@dimen/activity_wakeup_min_margin"
	    >
	    <Button 
	    android:id="@+id/signInText"
	    android:layout_width="@dimen/activity_wakeup_signin_button_size"
	    android:layout_height="@dimen/activity_wakeup_signin_button_size"
	    android:textSize="@dimen/activity_wakeup_mid_text_size"
	    android:textColor="#2087FC"
	    android:background="@drawable/disable_button_shape_circle"
	    android:text="点击\n签到"
		/>
	</LinearLayout>

</LinearLayout>

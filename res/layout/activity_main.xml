<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".MainActivity" >

	<ScrollView
		android:id="@+id/sv_value_activity"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

	<LinearLayout 
	    android:orientation="vertical"
   		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	    >
	<RelativeLayout 
	    android:id="@+id/alarm"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/activity_main_big_title"
	    android:background="#C42B2D"
	    >
	    <TextView 
	        android:layout_alignParentTop="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/rowOne"
	        android:layout_marginTop="@dimen/activity_main_margin_top_mid"
	        android:layout_marginLeft="20dp"
	        android:textColor="#FFFFFF"
	        android:textSize="72sp"
	        android:textStyle="normal"
	        android:clickable="false"
	        />
	    <ImageView 
	        android:id="@+id/weatherIcon"
	        android:layout_toRightOf="@id/rowOne"
	        android:layout_width="72sp"
	        android:layout_height="72sp"
	        android:layout_marginTop="40dp"
	        android:layout_marginLeft="20dp"
	        android:contentDescription="@string/signin_desc"
	        android:clickable="false"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/rowOne"
	        android:id="@+id/rowTwo"
	        android:layout_marginLeft="30dp"
   	        android:textColor="#FFFFFF"
	        android:textSize="18sp"
	        android:clickable="false"
	        />
	    <TextView 
	        android:layout_below="@id/weatherIcon"
	        android:layout_alignLeft="@id/weatherIcon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
   	        android:textColor="#FFFFFF"
	        android:textSize="14sp"
	        android:id="@+id/rowThree"
	        android:paddingLeft="5dp"
	        android:layout_marginLeft="10dp"
	        android:clickable="false"
	        />
	    <TextView 
	        android:layout_below="@id/rowTwo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
   	        android:textColor="#FFFFFF"
	        android:textSize="16sp"
	        android:id="@+id/rowFour"
	        android:layout_marginLeft="30dp"
	        android:clickable="false"
	        />
	</RelativeLayout>

	<RelativeLayout 
	    android:id="@+id/weather"
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:background="#D7D7D7"
	    >
	    <ImageButton
	        android:id="@+id/location"
	        android:layout_marginTop="10dp"
	        android:scaleType="centerCrop"
	        android:src="@drawable/location"
	        android:background="#D7D7D7"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        />
	    <ImageButton 
	        android:id="@+id/temp"
	        android:scaleType="centerCrop"
	        android:src="@drawable/temperature"
	        android:background="#D7D7D7"
	        android:layout_alignTop="@id/location"
	        android:layout_toRightOf="@id/location"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        />
	    <ImageButton 
	        android:id="@+id/weatherLike"
	        android:scaleType="centerCrop"
	        android:src="@drawable/wind_power"
	        android:background="#D7D7D7"
	        android:layout_alignTop="@id/location"
	        android:layout_toRightOf="@id/temp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        />
	    <ImageButton 
	        android:id="@+id/wind"
	        android:scaleType="centerCrop"
	        android:src="@drawable/water"
	        android:background="#D7D7D7"
	        android:layout_alignTop="@id/location"
	        android:layout_toRightOf="@id/weatherLike"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        />
	    <ImageButton 
	        android:id="@+id/uvValue"
	        android:scaleType="centerCrop"
	        android:src="@drawable/wind_direction"
	        android:background="#D7D7D7"
	        android:layout_alignTop="@id/location"
	        android:layout_toRightOf="@id/wind"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        />
	    <TextView 
 	        android:layout_alignLeft="@id/location"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/location"
	        android:id="@+id/locationText"
	        android:textSize="16sp"
	        android:textColor="#000000"
	        android:layout_marginTop="5dp"
	        />
	    <TextView 
 	        android:layout_alignLeft="@id/temp"
	        android:layout_below="@id/temp"
	        android:id="@+id/tempText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="#000000"
	        android:layout_marginTop="5dp"
	        />
	    <TextView 
 	        android:layout_alignLeft="@id/weatherLike"
	        android:layout_below="@id/weatherLike"
	        android:id="@+id/weatherLikeText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="#000000"
	        android:layout_marginTop="5dp"
	        />
	    <TextView 
 	        android:layout_alignLeft="@id/wind"
	        android:layout_below="@id/wind"
	        android:id="@+id/windText"
	        android:textSize="16sp"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        />
	    <TextView 
 	        android:layout_alignLeft="@id/uvValue"
	        android:layout_below="@id/uvValue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/uvValueText"
	        android:textSize="16sp"
	        android:textColor="#000000"
	        android:layout_marginTop="5dp"
	        />
	    </RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/signInLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:background="#6DB8BB"
	    >
	    <TextView 
	        android:layout_centerVertical="true"
	        android:id="@+id/signInText"
	        android:textColor="#000000"
	        android:textSize="20sp"
	        android:layout_marginLeft="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
    </RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/positiveLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:background="#FFFFFF"
	    >
	    <TextView 
	        android:layout_centerVertical="true"
	        android:id="@+id/positiveText"
	        android:textColor="#000000"
	        android:textSize="20sp"
	        android:layout_marginLeft="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
    </RelativeLayout>
    
	</LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.jlu.ge.dreamclock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ec4b2e"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical" >

        <cn.jlu.ge.knightView.CircleImageView
            android:id="@+id/userAvatar"
            android:layout_width="@dimen/activity_user_info_avatar_size"
            android:layout_height="@dimen/activity_user_info_avatar_size"
            android:background="@drawable/user_avatar"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_avatar"
            app:border_color="#FFFFFF"
            app:border_width="4dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/schoolDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:text="学校"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/genderDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/schoolDes"
            android:layout_marginTop="10dp"
            android:text="性别"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collegeDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/genderDes"
            android:layout_marginTop="10dp"
            android:text="学院"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/continueDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/collegeDes"
            android:layout_marginTop="30dp"
            android:text="连续签到"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recentGetUpTimeDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/continueDes"
            android:layout_marginTop="10dp"
            android:text="最近起床"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recentRankDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/recentGetUpTimeDes"
            android:layout_marginTop="10dp"
            android:text="最近排名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/schoolDes"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/genderDes"
            android:layout_below="@+id/school"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/collegeDes"
            android:layout_below="@+id/gender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/continueDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/continueDes"
            android:layout_below="@+id/college"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recentGetUpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/continueDay"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recentRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/recentRankDes"
            android:layout_below="@+id/recentGetUpTime"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>